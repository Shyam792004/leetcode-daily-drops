class Solution {
    public int hIndex(int[] citations) {
        int count[]=new int[citations.length+1];
        for(int var:citations)
        {
            if(var>=citations.length)
            {
                count[citations.length]+=1;
            }
            else
            {
                count[var]+=1;
            }
        }
        int paperwithHiteration=0;
        for(int i=citations.length;i>=0;i--)
        {
            paperwithHiteration += count[i];
            if(paperwithHiteration>=i)
            {
              return i;
            }
        }
        return 0;
    }
}
