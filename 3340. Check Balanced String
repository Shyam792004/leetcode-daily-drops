class Solution {
    public boolean isBalanced(String num) {
        // int n=Integer.parseInt(num);
        int digits[]=new int [num.length()];
        int odd=0;
        int even=0;
        for(int i=0;i<num.length();i++)
        {
           int digit=num.charAt(i)-'0';
           if(i%2!=0)
           {
             odd+=digit;
           }
           else
           {
            even+=digit;
           }
        }
        return (odd==even?true:false);
    }
}
